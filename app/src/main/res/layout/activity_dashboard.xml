<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windowBackground">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:elevation="0dp">

            <!-- Toolbar -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/dashboard_title"
                app:titleTextColor="@color/white"
                app:navigationIcon="@drawable/ic_menu"
                app:menu="@menu/toolbar_menu" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Dashboard Content (Main Screen) -->
        <LinearLayout
            android:id="@+id/dashboardContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/mainContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Welcome Section with Enhanced Design -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/welcomeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/welcome_back"
                                android:textSize="18sp"
                                android:textColor="@color/secondaryTextColor" />

                            <TextView
                                android:id="@+id/userNameText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_placeholder"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/primaryTextColor"
                                android:layout_marginTop="4dp" />

                            <!-- Search Section -->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/searchCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/dividerColor"
                                android:foreground="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="16dp"
                                    android:text="@string/search_properties_hint"
                                    android:textColor="@color/secondaryTextColor"
                                    android:textSize="16sp"
                                    app:drawableStartCompat="@drawable/ic_search"
                                    android:drawablePadding="16dp"
                                    android:gravity="center_vertical"
                                    app:drawableTint="@color/colorPrimary" />

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Feature Icons with Modern Design -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/services"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primaryTextColor"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_marginBottom="24dp"
                        android:baselineAligned="false">

                        <!-- Buy Icon -->
                        <LinearLayout
                            android:id="@+id/buyOption"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <androidx.cardview.widget.CardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="2dp"
                                app:cardBackgroundColor="@color/colorPrimaryLight">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_home"
                                    app:tint="@color/colorPrimary"
                                    android:contentDescription="@string/buy_title" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/buy_title"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/primaryTextColor" />
                        </LinearLayout>

                        <!-- Rent Icon -->
                        <LinearLayout
                            android:id="@+id/rentOption"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <androidx.cardview.widget.CardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="2dp"
                                app:cardBackgroundColor="#FFEAEF">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_apartment"
                                    app:tint="@color/pink_500"
                                    android:contentDescription="@string/rent_title" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/rent_title"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/primaryTextColor" />
                        </LinearLayout>

                        <!-- Sell Icon -->
                        <LinearLayout
                            android:id="@+id/sellOption"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <androidx.cardview.widget.CardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="2dp"
                                app:cardBackgroundColor="#E0F7FA">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_sell"
                                    app:tint="@color/cyan_500"
                                    android:contentDescription="@string/sell_title" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/sell_title"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/primaryTextColor" />
                        </LinearLayout>

                        <!-- AI Advisor Icon -->
                        <LinearLayout
                            android:id="@+id/aiAdvisorOption"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <androidx.cardview.widget.CardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="2dp"
                                app:cardBackgroundColor="#F3E5F5">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_ai"
                                    app:tint="@color/purple_500"
                                    android:contentDescription="@string/ai_advisor_title" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/ai_advisor_title"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/primaryTextColor" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Recommended Properties Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recommended_for_you"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primaryTextColor"
                        android:layout_marginBottom="16dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/propertyRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="80dp"
                        android:clipToPadding="false" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <!-- Fragment Container (initially hidden) -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginBottom="76dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <!-- AI Chat FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAIChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="96dp"
            android:src="@drawable/ic_chat"
            android:elevation="12dp"
            app:backgroundTint="@color/colorAccent"
            app:tint="@color/white"
            app:borderWidth="0dp"
            app:fabSize="normal"
            app:maxImageSize="24dp"
            android:contentDescription="@string/ai_chat_button_description" />

        <!-- Custom Bottom Navigation (REPLACE the BottomNavigationView with this) -->
        <include
            android:id="@+id/customBottomNavigation"
            layout="@layout/custom_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Enhanced Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemTextAppearance="@style/NavMenuTextStyle"
        app:itemIconPadding="16dp"
        app:itemIconSize="24dp" />
</androidx.drawerlayout.widget.DrawerLayout>