<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/documentIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_document"
            app:tint="@color/colorPrimary"
            android:contentDescription="Document icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/documentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Property Agreement"
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/documentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PDF"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:background="@drawable/chip_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />

                <TextView
                    android:id="@+id/documentSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2MB"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/documentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-01-15"
            android:textSize="12sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="View document"
            app:tint="@color/secondaryTextColor" />
    </LinearLayout>
</androidx.cardview.widget.CardView>